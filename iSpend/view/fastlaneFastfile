# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Run all the tests"
  lane :test do
    run_tests(scheme: "iSpend")
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "iSpend.xcodeproj")
    build_app(scheme: "iSpend")
    upload_to_testflight
  end

  desc "Push a new release build to the App Store"
  lane :release do
    increment_build_number(xcodeproj: "iSpend.xcodeproj")
    build_app(scheme: "iSpend")
    upload_to_app_store
  end

  desc "Run security audit on dependencies"
  lane :security_audit do
    # Run bundler-audit to check for vulnerable gems
    sh("bundle-audit check --update")
    
    # You can add more security checks here
    UI.success("Security audit completed successfully! ✅")
  end

  desc "Update dependencies securely"
  lane :update_deps do
    # Update Ruby dependencies
    sh("bundle update")
    
    # Run security audit after update
    security_audit
    
    UI.success("Dependencies updated securely! ✅")
  end
end